<UserControl x:Class="QLNhaHang.FoodManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:QLNhaHang"
             mc:Ignorable="d"
             d:DesignHeight="790" d:DesignWidth="1325"
             Background="#F0F4F8">

    <UserControl.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E6ED"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="20" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#1976D2" 
                Height="80" 
                VerticalAlignment="Top" Margin="0,0,0,0">
            <TextBlock Text="QUẢN LÝ MÓN ĂN"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#40000000" Direction="320" ShadowDepth="3" BlurRadius="4"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Food List Section -->
            <Border Background="White" 
                    CornerRadius="15" 
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="15" ShadowDepth="2" Direction="315"/>
                </Border.Effect>

                <DockPanel Margin="20">
                    <!-- Search and Actions -->
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search Bar -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="searchTextBox"  
                                     PreviewTextInput="searchTextBox_PreviewTextInput" DataObject.Pasting="searchTextBox_Pasting"  
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Margin="0,0,10,0">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            
                            
                            <Button Grid.Column="1"
                                    Content="Tìm Kiếm" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#4CAF50"
                                    Click="SearchButton_Click"
                                    Margin="0,0,5,0"/>

                            <Button Grid.Column="2"
                                Content="Làm Mới" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#FF9800"
                                    Click="RefreshButton_Click"
                                    Margin="5,0,0,0"/>
                        </Grid>
                        <!-- Action Buttons -->
                    </Grid>

                    <!-- Food List -->
                    <DataGrid Name="dgMonAn" SelectionChanged="dgMonAn_SelectionChanged"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="1"
                              BorderBrush="#E0E6ED"
                              RowBackground="White"
                              AlternatingRowBackground="#F8F9FA"
                              HorizontalGridLinesBrush="#E0E6ED"
                              VerticalGridLinesBrush="#E0E6ED">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F7FA"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#E0E6ED"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên Món" Binding="{Binding TenMonAn}" Width="*"/>
                            <DataGridTextColumn Header="Mô Tả" Binding="{Binding MoTa}" Width="2*"/>
                            <DataGridTextColumn Header="Giá (VNĐ)" Binding="{Binding Gia, StringFormat='{}{0:N0}'}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Số Lượng" Binding="{Binding SoLuong}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Add/Edit Form -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="15"
                    Margin="10,0,0,134">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="15" ShadowDepth="2" Direction="315"/>
                </Border.Effect>

                <StackPanel Margin="15">
                    <TextBlock Text="Thêm Món Ăn Mới" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#1976D2" 
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Tên Món:" 
                               Margin="0,0,0,5" 
                               FontWeight="Medium"/>
                    <TextBox x:Name="txtTenMonAn" 
                             Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Mô Tả:" 
                               Margin="0,10,0,5" 
                               FontWeight="Medium"/>
                    <TextBox x:Name="txtMoTa"
                             Style="{StaticResource ModernTextBoxStyle}" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Giá (VNĐ):" 
                               Margin="0,10,0,5" 
                               FontWeight="Medium"/>
                    <TextBox x:Name="txtGia" PreviewTextInput="NumberOnly_PreviewTextInput" DataObject.Pasting="TextBoxPastingEventHandler"  
                             Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Số Lượng:" 
                               Margin="0,10,0,5" 
                               FontWeight="Medium"/>
                    <TextBox x:Name="txtSoLuong" PreviewTextInput="NumberOnly_PreviewTextInput" DataObject.Pasting="TextBoxPastingEventHandler"
                             Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,20" />

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Thêm" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Background="#4CAF50"
                                Width="90"
                                Margin="5,0,5,0" Click="ButtonThem"/>
                        <Button Content="Hủy" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Background="#757575"
                                Width="90"
                                Margin="0,0,5,0" Click="ButtonHuy"/>
                        <Button Content="Sửa" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#2196F3"
                                Margin="0,0,5,0"
                                Width="90" Click="ButtonSua"
                                />
                        <Button Content="Xóa" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#F44336"
                                Width="90" Click="ButtonXoa"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>