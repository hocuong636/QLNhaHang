<UserControl x:Class="QLNhaHang.WarehouseManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:QLNhaHang"
             mc:Ignorable="d"
             Background="#F0F4F8"
             d:Height="790" d:Width="1325">

    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#E0E6ED"
                                BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="15,8"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" 
                                    CornerRadius="8" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#E0E6ED"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter 
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        Margin="15,8"/>
                                    <Path Grid.Column="1"
                                          Data="M0,0 L5,5 L10,0"
                                          Stroke="#666666"
                                          StrokeThickness="2"
                                          Margin="0,0,15,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   Placement="Bottom"
                                   AllowsTransparency="True">
                                <Border Background="White" 
                                        BorderBrush="#E0E6ED"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" 
                                                BlurRadius="10" 
                                                ShadowDepth="3" 
                                                Direction="315"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#1976D2" 
                Height="80" 
                VerticalAlignment="Top">
            
            <TextBlock Text="QUẢN LÝ KHO"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#40000000" 
                                    Direction="320" 
                                    ShadowDepth="3" 
                                    BlurRadius="4"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="750"/>
                <ColumnDefinition Width="430"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Inventory List -->
            <Border Background="White" 
                    CornerRadius="15" 
                    Margin="10,10,10,10">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="2" 
                                    Direction="315"/>
                </Border.Effect>

                <DockPanel Margin="20">
                    <Grid DockPanel.Dock="Top" Margin="0,0,20,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                                Style="{StaticResource ModernTextBox}"
                                Margin="0,0,20,0"/>

                        <Button Grid.Column="1"
                                Content="Tìm kiếm"
                                Style="{StaticResource ModernButton}"
                                Width="120"/>
                    </Grid>

                    <StackPanel DockPanel.Dock="Bottom" 
                              Orientation="Horizontal" 
                              Margin="0,20,0,0"
                              HorizontalAlignment="Right">
                        <Button Content="Kiểm tra"
                                Style="{StaticResource ModernButton}"
                                Width="120"
                                Margin="0,0,10,0"/>
                        <Button Content="Xóa"
                                Style="{StaticResource DeleteButton}"
                                Width="120"/>
                    </StackPanel>

                    <DataGrid x:Name="InventoryDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="1"
                              BorderBrush="#E0E6ED"
                              RowBackground="White"
                              AlternatingRowBackground="#F8F9FA"
                              HorizontalGridLinesBrush="#E0E6ED"
                              VerticalGridLinesBrush="#E0E6ED">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F7FA"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#E0E6ED"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã NL" Binding="{Binding MaNguyenLieu}" Width="100"/>
                            <DataGridTextColumn Header="Tên Nguyên Liệu" Binding="{Binding TenNguyenLieu}" Width="*"/>
                            <DataGridTextColumn Header="Số Lượng" Binding="{Binding SoLuong}" Width="100"/>
                            <DataGridTextColumn Header="Đơn vị tính" Binding="{Binding DonVi}" Width="100"/>
                            <DataGridTextColumn Header="Đơn giá" Binding="{Binding DonGia, StringFormat='{}{0:N0} đ'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Right Panel: Input Form -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="15" 
                    Margin="10,10,15,10">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="2" 
                                    Direction="315"/>
                </Border.Effect>

                <StackPanel Margin="20">
                    <TextBlock Text="Nhập Kho" 
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             Foreground="#1976D2" 
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Mã Nguyên liệu:" 
                             Margin="0,0,0,5" 
                             FontWeight="Medium"/>
                    <TextBox x:Name="InputCodeTextBox" 
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Tên Nguyên liệu:" 
                             Margin="0,0,0,5" 
                             FontWeight="Medium"/>
                    <TextBox x:Name="ProductNameTextBox" 
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Số lượng:" 
                             Margin="0,0,0,5" 
                             FontWeight="Medium"/>
                    <TextBox x:Name="QuantityTextBox" 
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Giá nhập tính:" 
                             Margin="0,0,0,5" 
                             FontWeight="Medium"/>
                    <TextBox x:Name="PriceTextBox" 
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Đơn vị:" 
                             Margin="0,0,0,5" 
                             FontWeight="Medium"/>
                    <ComboBox x:Name="UnitComboBox" 
                            Style="{StaticResource ModernComboBox}"
                            Margin="0,0,0,15">
                        <ComboBoxItem Content="Kg"/>
                        <ComboBoxItem Content="Chai"/>
                        <ComboBoxItem Content="Hộp"/>
                    </ComboBox>

                    <TextBlock Text="Người nhập:" 
                             Margin="0,0,0,5" 
                             FontWeight="Medium"/>
                    <TextBox x:Name="PersonTextBox" 
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,30"/>

                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button Content="Nhập kho"
                                Style="{StaticResource ModernButton}"
                                Width="120"
                                Margin="0,0,10,0"/>
                        <Button Content="Hủy bỏ"
                                Style="{StaticResource DeleteButton}"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>