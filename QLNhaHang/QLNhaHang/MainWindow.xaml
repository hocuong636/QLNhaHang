<Window x:Class="QLNhaHang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLNhaHang"
        mc:Ignorable="d"
        Title="Đăng Nhập" 
        Height="600" 
        Width="900"
        KeyDown="Window_KeyDown"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#1976D2"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#F5F6F7"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#1976D2"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#F5F6F7"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" 
                                                Direction="270" 
                                                ShadowDepth="3" 
                                                BlurRadius="5"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0" TargetName="border"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="20" 
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                            Direction="270" 
                            ShadowDepth="3" 
                            BlurRadius="15"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left side - Image -->
            <Border CornerRadius="20,0,0,20">
                <Border.Background>
                    <ImageBrush ImageSource="/8ed4ae5f7aa646bc06bfec9ff44c932e.jpg" 
                               Stretch="UniformToFill"/>
                </Border.Background>
                <Border Background="#80000000" CornerRadius="20,0,0,20">
                    <StackPanel VerticalAlignment="Center" Margin="40,0">
                        <TextBlock Text="Welcome Back!" 
                                 Foreground="White" 
                                 FontSize="36" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Left"/>
                        <TextBlock Text="Please login to access your account" 
                                 Foreground="#DDFFFFFF" 
                                 FontSize="16" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Border>

            <!-- Right side - Login Form -->
            <Grid Grid.Column="1" Margin="40">
                <!-- Close Button -->
                <Button Style="{StaticResource ModernButton}" 
                        Height="32"
                        Background="#FF5252" 
                        VerticalAlignment="Top" 
                        Content="✕"
                        Click="CloseButton_Click" Margin="288,0,0,0" HorizontalAlignment="Left" Width="32"/>

                <StackPanel VerticalAlignment="Center" Margin="0,20">
                    <TextBlock Text="Login" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Margin="0,0,0,40"
                             Foreground="#1976D2"/>

                    <TextBlock Text="Username" 
                             Foreground="#555555" 
                             FontSize="12" 
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox" 
                            Style="{StaticResource ModernTextBox}"
                            Height="45" 
                            Margin="0,0,0,20"/>

                    <TextBlock Text="Password" 
                             Foreground="#555555" 
                             FontSize="12" 
                             Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" 
                               Style="{StaticResource ModernPasswordBox}"
                               Height="45" 
                               Margin="0,0,0,30"/>

                    <Button x:Name="LoginBtn" 
                            Style="{StaticResource ModernButton}"
                            Content="LOGIN" 
                            Height="50"
                            Width="200"
                            Click="LoginBtn_Click">
                    </Button>

                    <Button x:Name="ForgetBtn" 
                            Content="Forget Password ?" 
                            Height="20"
                            Width="100"
                            Margin="0,10,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#1976D2"
                            Click="ForgetBtn_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>